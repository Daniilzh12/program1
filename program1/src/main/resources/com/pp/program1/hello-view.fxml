<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.canvas.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane prefHeight="350.0" prefWidth="440.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.pp.program1.HelloController">
   <top>
       <MenuBar fx:id="menuBar" BorderPane.alignment="CENTER">
           <Menu mnemonicParsing="false" text="Файл">
               <MenuItem mnemonicParsing="false" onAction="#saveAll" text="Сохранить все слайды" />
               <MenuItem mnemonicParsing="false" onAction="#SaveSlide" text="Сохранить текущий слайд" />
            <MenuItem mnemonicParsing="false" onAction="#openFile" text="Открыть файл" />
           </Menu>
           <Menu mnemonicParsing="false" text="Изменение">
               <MenuItem mnemonicParsing="false" onAction="#clearSlide" text="Очистить слайд" />
               <MenuItem mnemonicParsing="false" onAction="#setImage" text="Выбрать изображение" />
           </Menu>
       </MenuBar>
   </top>
   <left>
      <VBox BorderPane.alignment="CENTER">
         <children>
            <Label text="Инструменты">
               <font>
                  <Font name="System Bold" size="12.0" />
               </font>
            </Label>
             <ToolBar fx:id="toolbar" orientation="VERTICAL" prefHeight="86.0" prefWidth="85.0">
                 <Button mnemonicParsing="false" onAction="#addText" prefHeight="25.0" prefWidth="74.0" text="Текст" />
               <ToggleButton fx:id="drawer" mnemonicParsing="false" prefHeight="42.0" prefWidth="75.0" text="КарандашЛастик" textAlignment="CENTER" wrapText="true" />
             </ToolBar>
            <Label text="Анимации">
               <font>
                  <Font name="System Bold" size="12.0" />
               </font>
            </Label>
            <RadioButton fx:id="darkAnim" mnemonicParsing="false" selected="true" text="Поворот">
               <toggleGroup>
                  <ToggleGroup fx:id="anim" />
               </toggleGroup></RadioButton>
            <RadioButton fx:id="moveAnim" mnemonicParsing="false" text="Затухание" toggleGroup="$anim" />
            <RadioButton fx:id="smallAnim" mnemonicParsing="false" text="Уменьшение" toggleGroup="$anim" />
            <Slider fx:id="speed" max="10000.0" min="100.0" prefHeight="14.0" prefWidth="72.0" showTickLabels="true" value="100.0" />
         </children>
      </VBox>
   </left>
   <bottom>
      <ToolBar prefHeight="40.0" prefWidth="200.0" BorderPane.alignment="CENTER">
        <items>
            <Button mnemonicParsing="false" onAction="#moveBackward" text="&lt;&lt;" textOverrun="CENTER_WORD_ELLIPSIS" />
          <Button mnemonicParsing="false" onAction="#prev" text="&lt;" textOverrun="CENTER_WORD_ELLIPSIS" />
            <Button layoutX="10.0" layoutY="13.0" mnemonicParsing="false" onAction="#addSlide" prefHeight="25.0" prefWidth="117.0" text="Добавить слайд" textOverrun="CENTER_WORD_ELLIPSIS" />
            <Button mnemonicParsing="false" onAction="#duplicateSlide" text="Дублировать" />
            <Button layoutX="10.0" layoutY="13.0" mnemonicParsing="false" onAction="#next" text="&gt;" textOverrun="CENTER_WORD_ELLIPSIS" />
            <Button layoutX="10.0" layoutY="13.0" mnemonicParsing="false" onAction="#moveForward" text="&gt;&gt;" textOverrun="CENTER_WORD_ELLIPSIS" />
            <Label fx:id="num" text="1" />
        </items>
      </ToolBar>
   </bottom>
   <center>
       <AnchorPane fx:id="slide" prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
           <Canvas fx:id="graphics" height="289.0" width="369.0" AnchorPane.bottomAnchor="-4.0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="-1.0" AnchorPane.topAnchor="0" />
       </AnchorPane>
   </center>
</BorderPane>
